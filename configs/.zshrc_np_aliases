# Open Projects in Vi Shourtcuts
alias dtask='vi /mnt/c/Users/badmus.taofeeq/vimwiki/NetPay/April2019.md'

# Delete generated swp files in folder
xswp () {
    if [ $# -eq 0 ]; then
        cd /mnt/c/wamp/www/ 
    else 
        cd "$1" 
    fi
    rm -i **/*.swp
}

